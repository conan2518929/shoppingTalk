<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_one" >

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我的互动"
                android:textColor="@color/white"
                android:textSize="@dimen/ziti_size_eleven" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/bg_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/hggb"
            android:visibility="invisible" />

        <com.example.shoppingtalk.widget.CircleImageView
            android:id="@+id/image_tx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/my_tx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/hdfb"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_fb_num"
                    android:layout_width="match_parent"
                    android:layout_height="18sp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#53affa"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fb"
                    android:layout_width="match_parent"
                    android:layout_height="18sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="互动发表"
                    android:textColor="#53affa"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="18sp"
                android:layout_marginTop="22dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:id="@+id/hdhf"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_hf_num"
                    android:layout_width="match_parent"
                    android:layout_height="18sp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#878787"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_hf"
                    android:layout_width="match_parent"
                    android:layout_height="18sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="互动回复"
                    android:textColor="#878787"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="18sp"
                android:layout_marginTop="22dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:id="@+id/hdsc"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_sc_num"
                    android:layout_width="match_parent"
                    android:layout_height="18sp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#878787"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sc"
                    android:layout_width="match_parent"
                    android:layout_height="18sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="互动收藏"
                    android:textColor="#878787"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#e6e6e6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/jianpan"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone" >

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:background="#ebebeb" />

            <View
                android:id="@+id/lin_bottom"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:background="#ebebeb" />

            <LinearLayout
                android:id="@+id/ll_hint"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_above="@id/lin_bottom"
                android:layout_below="@id/line"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="隐藏"
                    android:textColor="@color/pl_text"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/downhint" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="34dp"
                android:layout_above="@id/lin_bottom"
                android:layout_below="@id/line"
                android:layout_toRightOf="@id/ll_hint"
                android:background="#ebebeb" />

            <Button
                android:id="@+id/send"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_above="@id/lin_bottom"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line"
                android:layout_marginRight="5dp"
                android:background="@color/btn_pl_send"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <com.example.shoppingtalk.widget.ContainsEmojiEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_above="@id/lin_bottom"
                android:layout_below="@id/line"
                android:layout_toLeftOf="@id/send"
                android:layout_toRightOf="@id/ll_hint"
                android:background="@null"
                android:hint="请输入内容..."
                android:maxLength="100"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp" />
        </RelativeLayout>

        <com.example.shoppingtalk.widget.PullToRefreshListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/jianpan"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:scrollbars="none" >
        </com.example.shoppingtalk.widget.PullToRefreshListView>
    </RelativeLayout>

</LinearLayout>